<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>相册</title>
    <style>
        #chenggong,#shibai{
            display: none;
        }
        .kaui{
            padding: 5px 5px;
            border-bottom: 1px solid #5a5a5a;
        }
    </style>
    <!--//模板引擎-->
    <script type="text/html" id="arttep">
        {{each res as value}}
        <div class="kaui">
                <p>【姓名】{{value.xingming}}</p>
                <p >【留言】{{value.liuyan}}</p>
                <p >【时间】{{value.shijian}}</p>
        </div>
            <!--<p>{{value.xingming}}</p>-->
            <!--<p>{{value.liuyan}}</p>-->
        {{/each}}
    </script>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">


    <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>

</head>
<body>
<h1 style="text-align: center">我的小小留言本</h1>
<div class="container">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="xingming" class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="xingming" placeholder="姓名" name="xingming">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">留言</label>
            <div class="col-sm-10">
                <textarea class="form-control" rows="3" name="liuyan" id="liuyan" placeholder="留言内容" ></textarea>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-default" id="tijiao">提交</button>
            </div>
        </div>
        <div class="alert alert-success" role="alert" id="chenggong">提交成功</div>

        <div class="alert alert-warning" role="alert" id="shibai">提交失败</div>
    </form>

    <div class="hh" id="tet">
        <!--tianchong-->
    </div>
</div>
<script src="js/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="js/template.js" ></script>
<script src="js/bootstrap.min.js"></script>
<script>
//ajax请求数据显示在页面
        $.get("/du", function(e){
//            var json = JSON.parse(result);
            console.log(e.result.length);
            var array = new Array();
            for(var i=0;i<e.result.length;i++){
                array[i]=e.result[i];
            }
            var c= {res:array};
            console.log(c);
//            console.log(e.result);
            var html = template('arttep',c);
            $("#tet").html(html);
        });
//提交表单
    $("#tijiao").click(function(){
        $("#shibai").hide();
        $("#chenggong").hide();
console.log("llll");
        $.post("/tijiao",{
            "xingming":$("#xingming").val(),
            "liuyan":$("#liuyan").val()
        },function(result){
           if(result.result==-1){
               $("#shibai").fadeIn()

           }else if(result.result==1){

               $("#chenggong").fadeIn();
               //提交成功 当前页面却无法显示s
           }
        });
//        window.location = "/";
    });

</script>
</body>
</html>